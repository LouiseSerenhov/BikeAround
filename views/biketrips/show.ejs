<% include ../partials/header %>
<div class="container">
       <div class="row">
           
        <div class="col-md-3">
            <p class="lead">BikeAround</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
            </div>
            
             <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= biketrip.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">700km</h4>
                    <h4><a><%=biketrip.name%></a></h4>
                    <p><%= biketrip.description %></p>
                </div>
            </div>
             <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/biketrips/<%= biketrip._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
            
            
             <% biketrip.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %> 
                            </p>
                        </div>
                    </div>
                <% }) %>
