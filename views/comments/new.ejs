        <h1 style="text-align: center">Lägg till en kommentar till <%= biketrip.name %> </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/bikeTrips/<%= biketrip._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Text">
                </div>
            
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Skapa!</button>
                </div>
            </form>
            <a href="/bikeTrips">Gå tillbaks</a>
        </div>
    </div>
</div>
